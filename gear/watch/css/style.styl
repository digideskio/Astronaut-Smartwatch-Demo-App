@import '../../common/css/base.styl'

h1
  font-size 30px
  color white
  margin-bottom 5px

h2
  font-size 24px
  color color-gray-dark
  margin-bottom 6px

h4
  font-size 24px
  color color-gray
  padding-bottom 6px
  margin 21px 0 31px 19px

h4.role
    margin 0 0 0 19px
    color white

.contents
  display: flex
  display: -webkit-flex
  box-sizing: border-box
  -webkit-box-sizing: border-box
  height: 320px

.content_text
  font-weight: bold;
  font-size: 5em;
  color: #fff;

.ui-content section
  overflow: hidden
  overflow-y: auto

//Timeline
.header
  width: 100%
  height 40px
  padding 0 15px 7px 15px
  display -webkit-flex
  display flex
  align-items center
  -webkit-align-items center

.screen-title
  font-size 30px
  color: white
  font-weight 700

.clock
  font-size 30px
  color: color-gray-dark
  margin-left auto

.circle-white
  circle(10px, #fff)

.circle-blue
  circle(20px, color-blue)
  float left
  margin 6px 8px 0 20px
  position absolute
  top: 0

.list-item
  width 100%
  margin auto
  position: relative

.list-item-text
  width: 100%
  margin-left 50px

//Comms
half-circle(marginRight, bTop, bRight, bBottom, bLeft)
  height 120px
  width 55px
  -webkit-border-radius bTop bRight bBottom bLeft
  background: color-black-light
  float left
  margin 0 marginRight 0 0
  display -webkit-flex
  display flex
  align-items center
  -webkit-align-items center
  justify-content center
  -webkit-justify-content center

.half-circle-right
  half-circle(0, 0, 55px, 55px, 0)

.half-circle-left
  half-circle(10px, 55px, 0, 0, 55px)

.band
  font-size 28px
  color white
  font-weight 300

quarter-circle(bg, bTop, bRight, bBottom, bLeft)
  background-color bg
  height 121px
  width 60.5px
  -webkit-border-radius bTop bRight bBottom bLeft
  border-radius bTop bRight bBottom bLeft

.events-placeholder
  display: flex
  display: -webkit-flex
  box-sizing: border-box
  -webkit-box-sizing: border-box
  height: 100%
  padding 0
  margin 0
  align-items center
  -webkit-align-items center
  justify-content center
  -webkit-justify-content center

.role-selector
  padding-left: 15px
  display: flex;
  display: -webkit-flex;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  align-items center
  -webkit-align-items center
  justify-content flex-start
  -webkit-justify-content flex-start
  margin 12px 0 12px 0

.back-btn
  margin-right 10px
  display inline

.selected
  color red

.role-list-item
  margin 0 0 30px 30px

.roles-list
  margin-top 15px