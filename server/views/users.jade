extends layout
block content
    h2 Users

    table(id='users-table' data-sortable).table.table-bordered.table-striped.sortable-theme-bootstrap
        thead
            tr
                th Name
                th
        tbody
            each user in list.users
                tr
                    td.col-sm-3
                        input(type='text' value='#{user.name}' name='name' placeholder='Name').form-control
                    td
                        a(href='/admin/users/#{user.name}/delete').btn.btn-danger Delete

    button(type='submit' id='users-save').btn.btn-primary Save
    br
    br
    br
    h4 New user
    table(id='add-user-table').table.table-bordered.table-striped
        tbody(id='user-add-body')
            tr
                td.col-sm-3
                    input(type='text' name='name' placeholder='Name').form-control
                td
                    button(id='user-add').btn.btn-success Add


    br
    form(id="users-upload-form" action='/admin/users/upload' method='post' enctype="multipart/form-data")
        .form-group
            label(for='upload') Upload json data
            input(type='file' name='users' id='upload')
            br
            input(type='submit' value="Upload")