extends layout

block content
    h2 Add Alert

    - var statusOptions = ['Emergency', 'Warning', 'Caution', 'Advisory'];

    form(id="add-alert-form")
        .form-group
            label(for='title') Title
            input(type='text' name='title' id='title' placeholder='Alert title' maxlength=15).form-control
        .form-group
            label(for='date') Date
            input(name='date' id='date' data-provide="datepicker" data-date-format="mm/dd/yyyy" data-date-today-highlight='true' data-date-today-btn='linked').form-control
        .form-group.input-group.bootstrap-timepicker.timepicker
            label(for='time') Time
            input(type="text" id='time' data-provide="timepicker" data-template="dropdown" data-minute-step="1" data-show-inputs='false' data-show-seconds='true'  name='time' data-show-meridian="false" placeholder='00:00:00').form-control
        .form-group
            label(for='system') System
            input(type='text' name='system' id='system' placeholder='CDH' maxlength=8).form-control
        .form-group
            label(for='status') Status
            select(name='status' id='status').form-control.input-sm
                each val in statusOptions
                    option(selected=index == 0) #{val}
        .form-group
            .checkbox
                label
                    input(type='checkbox', name='notify' id='notify')
                    | Show notification on watch
        button(type='submit' id='alert-add').btn.btn-primary Add