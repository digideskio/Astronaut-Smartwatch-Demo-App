extends layout

block content
    h2 Add Alert

    - var statusOptions = [ 'Alarm', 'Critical'];

    form(id="add-alert-form")
        .form-group
            label(for='title') Title
            input(type='text' name='title' id='title' placeholder='Alert title').form-control
        .form-group
            label(for='date') Date
            input(name='date' id='date' placeholder='1/31/2016' data-provide="datepicker" data-date-format="dd/mm/yyyy").form-control
        .form-group.input-group.bootstrap-timepicker.timepicker
            label(for='time') Time
            input(type="text" id='time' data-provide="timepicker" data-template="modal" data-minute-step="1" data-modal-backdrop="true" name='time' data-show-meridian="false" placeholder='00:00').form-control
        .form-group
            label(for='status') Status
            select(name='status' id='status').form-control.input-sm
                each val in statusOptions
                    option(selected=index == 0) #{val}
        .form-group
            label(for='ack') Ack
            textarea(rows='3' name='ack' id='ack' placeholder='...').form-control
        .form-group
            label(for='annun') Annun
            input(type='text' name='annun' id='annun' placeholder='').form-control
        button(type='submit' id='alert-add').btn.btn-primary Add