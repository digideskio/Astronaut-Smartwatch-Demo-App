doctype html
html
    head
        title #{title}
        link(href="/lib/bootstrap/css/bootstrap.css", rel="stylesheet")
        link(href='/stylesheets/style.css', rel='stylesheet')
        link(href="/lib/bootstrap-editable-table/bootstrap-editable-table.css", rel="stylesheet")
        link(href="/lib/bootstrap-datepicker/datepicker.css", rel="stylesheet")
        link(href="/lib/bootstrap-timepicker/css/timepicker.css", rel="stylesheet")
        link(href="/lib/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css", rel="stylesheet")
        link(href="/lib/bootstrap-multiselect/bootstrap-multiselect.css", rel="stylesheet")
        link(href="/lib/sortable/css/sortable-theme-bootstrap.css", rel="stylesheet")
        script(type="text/javascript" src='/lib/jquery.min.js')
        script(type="text/javascript" src='/lib/bootstrap-editable-table/bootstrap-editable-table.js')
        script(type="text/javascript" src='/lib/bootstrap-datepicker/js/bootstrap-datepicker.js')
        script(type="text/javascript" src='/lib/bootstrap-timepicker/js/bootstrap-timepicker.js')
        script(type="text/javascript" src='/lib/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js')
        script(type="text/javascript" src='/lib/bootstrap/js/bootstrap.min.js')
        script(type="text/javascript" src='/lib/bootstrap-multiselect/bootstrap-multiselect.js')
        script(type="text/javascript" src='/lib/sortable/sortable.min.js')
        script(type="text/javascript" src='/lib/bootstrap-maxlength.js')
        script(type="text/javascript" src='/js/admin.js')
    body
        block nav
            nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
                .navbar-header
                    button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="#") Nasa SmartWatch Admin

                .navbar-collapse.collapse
                    ul.navbar-nav.nav
                        - var obj = { 'events':'Events', 'roles':'Roles', 'alerts':'Alerts', 'comms': 'Comms' }

                        each val, key in obj
                            if id == key
                                li.active
                                    a(href="/admin/#{key}") #{val}
                            else
                                li
                                    a(href='/admin/#{key}') #{val}
        block content
